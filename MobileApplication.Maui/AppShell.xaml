<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileApplication.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileApplication.Maui"
    xmlns:shell="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
    Title="MobileApplication.Maui">

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="10">
            <Label Text="M A T R I X  INC." 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"/>
            <Image Source="usr.jpg"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
                   VerticalOptions="Center"
                   HorizontalOptions="End">
                <Image.Clip>
                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20" />
                </Image.Clip>
            </Image>
        </Grid>
    </Shell.TitleView>

    <ShellContent
        Title="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Title ="SchedulePage" Route="SchedulePage"
                  ContentTemplate="{DataTemplate local:SchedulePage}" />
</Shell>

