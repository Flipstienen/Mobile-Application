<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileApplication.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileApplication.Maui"
    xmlns:Pages="clr-namespace:MobileApplication.Maui.Pages"
    Title="MobileApplication.Maui"
    FlyoutBehavior="Disabled">

    <!-- Custom TitleView with your app name and user image -->
    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" Padding="10">
            <Label Text="M A T R I X  INC." 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"/>
            <Image Source="usr.jpg"
                   HeightRequest="40"
                   WidthRequest="40"
                   Aspect="AspectFill"
                   VerticalOptions="Center"
                   HorizontalOptions="End">
                <Image.Clip>
                    <EllipseGeometry Center="20,20" RadiusX="20" RadiusY="20" />
                </Image.Clip>
            </Image>
        </Grid>
    </Shell.TitleView>

    <!-- Bottom TabBar replacing the flyout menu -->
    <TabBar>
        <Tab Title="Dashboard" Route="MainPage">
            <ShellContent ContentTemplate="{DataTemplate Pages:MainPage}" />
        </Tab>
        <Tab Title="Schedule" Route="SchedulePage">
            <ShellContent ContentTemplate="{DataTemplate Pages:SchedulePage}" />
        </Tab>
        <Tab Title="Current Order" Route="CurrentOrderPage">
            <ShellContent ContentTemplate="{DataTemplate Pages:CurrentOrderPage}" />
        </Tab>
        <Tab Title="Weather" Route="WeatherPage">
            <ShellContent ContentTemplate="{DataTemplate Pages:WeatherPage}" />
        </Tab>
    </TabBar>

</Shell>