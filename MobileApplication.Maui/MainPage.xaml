<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileApplication.Maui.MainPage"
    Title="Order Info">

    <ScrollView>
        <CollectionView x:Name="OrderCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BorderColor="LightGray" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="{Binding Id, StringFormat='Order ID: {0}'}" FontAttributes="Bold" />
                            <Label Text="{Binding OrderDate, StringFormat='Date: {0:yyyy-MM-dd}'}" />
                            <Label Text="{Binding CustomerDisplay}" />
                            <Label Text="{Binding ProductsDisplay}" />
                            <Label Text="{Binding DeliveryStateDisplay}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ScrollView>
</ContentPage>