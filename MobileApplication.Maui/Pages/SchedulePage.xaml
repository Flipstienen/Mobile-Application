<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModel="clr-namespace:MobileApplication.Maui.ViewModel"
             x:Class="MobileApplication.Maui.Pages.SchedulePage"
             Title="SchedulePage">
    <ContentPage.BindingContext>
        <ViewModel:SchedulePageViewModel/>
    </ContentPage.BindingContext>

    <CollectionView x:Name="OrderCollectionView" ItemsSource="{Binding Orders}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <VerticalStackLayout Padding="10">
                    <Label Text="{Binding Id}" FontSize="18" FontAttributes="Bold" />
                    <Label Text="{Binding OrderDate, StringFormat='Order Date: {0:MM/dd/yyyy}'}" FontSize="14" />
                    <Label Text="{Binding CustomerDisplay}" FontAttributes="Bold" />
                    <Label Text="{Binding DeliveryStateDisplay}" FontAttributes="Italic" />
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>

