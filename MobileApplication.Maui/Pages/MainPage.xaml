<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MobileApplication.Maui.Pages.MainPage"
    BackgroundColor="#2C2C2C">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="24">
            <VerticalStackLayout Spacing="16" HorizontalOptions="Center">
                <VerticalStackLayout>
                    <Frame Style="{StaticResource ButtonFrameStyle}">
                        <Button Text="📦 Current Order"
                                Style="{StaticResource HomeButtonStyle}"
                                Clicked="OnCurrentOrderClicked"/>
                    </Frame>

                    <Frame Style="{StaticResource ButtonFrameStyle}">
                        <Button Text="📋 Schedule"
                                Style="{StaticResource HomeButtonStyle}"
                                Clicked="OnScheduleClicked"/>
                    </Frame>

                    <Frame Style="{StaticResource ButtonFrameStyle}">
                        <Button Text="🌧️ Weather"
                                Style="{StaticResource HomeButtonStyle}"
                                Clicked="OnWeatherClicked"/>
                    </Frame>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
