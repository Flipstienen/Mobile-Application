<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="MobileApplication.Maui.Pages.WeatherPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Weather">

    <VerticalStackLayout Padding="20" Spacing="10" HorizontalOptions="Center">
        <Label Text="Weather" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label x:Name="TemperatureLabel" Text="22°" FontSize="48" FontAttributes="Bold" />
        <Label x:Name="ConditionLabel" Text="Sunny" FontSize="24" />
        <Label x:Name="LowLabel" Text="Low 11°" FontSize="18" />
        <Label x:Name="WindLabel" Text="Wind 16kph / NNE" FontSize="18" />
        <Label x:Name="RainChanceLabel" Text="Chance of Rain 17%" FontSize="18" />
    </VerticalStackLayout>
</ContentPage>
